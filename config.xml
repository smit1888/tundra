<?xml version='1.0' encoding='utf-8'?>
<widget id="com.edumedia.smit1888.tundra" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Smit1888-Tundra</name>
    <description>
        Tundra app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
      Smit beladiya
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="/res/icons/android/Artboard1.png" />
        <splash density="port-mdpi" src="/res/screen/android/Artboard3.png" />
        <splash density="port-xhdpi" src="/res/screen/android/Artboard6.png" />
        <splash density="port-xxhdpi" src="/res/screen/android/Artboard4.png" />
        <splash density="land-hdpi" src="/res/screen/android/Artboard5.png" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="5000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="5000" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.3" />
</widget>
